<script>
    function test() {
        var answer = document.getElementById('answer').value;
        if(answer == '<%= ranWord; %>') {
            alert('정답입니다!');

            if(confirm('한번더 하시겠습니까?') == true) {
                location.reload();
            } else {
                location.href="/problem_list";
            }
        } else {
            alert('오답입니다!');

            if(confirm('한번더 하시겠습니까?') == true) {
                location.reload();
            } else {
                location.href="/problem_list";
            }
        }
    }
</script>


