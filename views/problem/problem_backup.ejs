<main id="main_background" class="page faq-page">
    <section class="clean-block clean-faq dark" style="height: 100%;">
        <div class="container">
            <div class="row">
                <p>문제</p>
                <p class="problem_text_1" data-aos="fade-out" data-aos-duration="1000"><%= result[0].title %></p>
                <div id="center_container" class="col-lg-12">
                    <!--title-page-->
                    <div id="title_page">
                        <p id="problem_test">
                            <%
                            var ranNum = Math.floor(Math.random()*(result2.length));
                            var ranWord = result2[ranNum].words;

                            var sentence = result[0].sentence.replace(ranWord, '<input id="answer" style="width: ' + 30 * ranWord.length + 'px;">');
                            %>
                            <%- sentence %>
                        </p>
                        <button id="next" class="next" type="button" onclick="test();" style="float: right">제출</button>
                    </div>


                </div>

            </div>

        </div>
    </section>
</main>

