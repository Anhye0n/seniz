<main id="main_background" class="page faq-page">
    <section class="clean-block clean-faq dark" style="height: 100%;">
        <div class="container">
            <div class="row">

                <div class="col-lg-12">
                    <hr style="height: 85%; width: 0; border: 3px solid #eb6f65; float: left; border-radius: 10px">

                    <div class="row">
                        <div class="col-lg-6 stage">
                            <p class="stage_text"><%= result[0].title; %></p>
                            <p class="stage_text_explain">문제 1</p>
                        </div>
                        <div class="col-lg-6">

                        </div>
                    </div>
                </div>

                <div class="col-lg-12" style="min-height: 540px;">
                    <div class="row">
                        <div class="col-lg-12" style="margin-top: 50px;">
                            <p class="notes_1 save-text" readonly style="padding-top: 8px; padding-bottom: 9px;">
                                <%
                                var ranNum = Math.floor(Math.random()*(result2.length));
                                var ranWord = result2[ranNum].words;

                                var sentence = result[0].sentence.replace(ranWord, '<input id="answer" style="width: ' + 30 * ranWord.length + 'px;">');
                                %>
                                <%- sentence %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <button id="previous" class="show_" type="button" style="float: left;" onclick="location.href='http://202.182.96.185/problem_list'">문 제 목 록</button>
                    <button id="next" class="show_" type="button" onclick="test();" style="float: right">제 출</button>
                </div>
